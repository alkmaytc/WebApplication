@model List<Movie>

<h2>Your Shopping Cart</h2>

<ul>
    @foreach (var movie in Model)
    {
        <li>
            <p><strong>@movie.Title</strong> - @movie.Director</p>
            <img src="@movie.ImageUrl" alt="@movie.Title" width="100" />
        </li>
    }
</ul>

<p><a href="@Url.Action("Index", "Home")">Continue Shopping</a></p>
